menuconfig BUILD_AMBARELLA_ORYX_STREAM
  bool "Build Oryx Stream"
  depends on BUILD_AMBARELLA_ORYX_MW
  select BUILD_AMBARELLA_ORYX_UTIL
  select BUILD_AMBARELLA_ORYX_CONFIG
  select BUILD_AMBARELLA_ORYX_OSAL
  select BUILD_AMBARELLA_ORYX_AUDIO_CODEC
  default n
  help
    Build Oryx Stream

menuconfig BUILD_AMBARELLA_ORYX_STREAM_RECORD
  bool "Build Oryx Stream Record Module"
  depends on BUILD_AMBARELLA_ORYX_STREAM
  select CONFIG_AMBARELLA_LIBEXIF_SUPPORT
  select BUILD_AMBARELLA_ORYX_AUDIO
  select BUILD_AMBARELLA_ORYX_AUDIO_CAPTURE
  default y
  help
    Build Oryx Stream Record Module

config BUILD_AMBARELLA_ORYX_MUXER_EXPORT
  bool "Build Oryx Record Muxer Module - Export Raw Data Muxer"
  depends on BUILD_AMBARELLA_ORYX_STREAM_RECORD
  default y
  help
    Build Export Raw Data Muxer

config BUILD_AMBARELLA_ORYX_MUXER_TS
  bool "Build Oryx Record Muxer Module - TS File Muxer"
  depends on BUILD_AMBARELLA_ORYX_STREAM_RECORD
  default y
  help
    Build TS File Muxer

