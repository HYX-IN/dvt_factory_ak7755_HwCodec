  bool "Build Oryx RTP AAC   Audio Session Support"
  depends on BUILD_AMBARELLA_ORYX_MUXER_RTP
  default y
  help
    Build RTP AAC Session

config BUILD_AMBARELLA_ORYX_RTP_SESSION_AAC_SINGLE_AU
  bool "Package every AAC into single audio unit"
  depends on BUILD_AMBARELLA_ORYX_RTP_SESSION_AAC
  default y
  help
    Build AAC into single audio unit

config BUILD_AMBARELLA_ORYX_RTP_SESSION_AAC_STRIP_HEADER
  bool "AAC RTP Package without ADTS header"
  depends on BUILD_AMBARELLA_ORYX_RTP_SESSION_AAC
  default n
  help
    Strip ADTS header when build AAC RTP package

