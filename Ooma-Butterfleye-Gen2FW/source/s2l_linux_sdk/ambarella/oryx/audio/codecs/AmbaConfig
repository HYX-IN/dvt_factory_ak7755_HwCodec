menuconfig BUILD_AMBARELLA_ORYX_AUDIO_CODEC
  bool "Audio Codec Plugin"
  depends on BUILD_AMBARELLA_ORYX_AUDIO
  default y
  help
    Build Oryx Audio Codec Plugin (Encoder / Decoder)

menuconfig BUILD_AMBARELLA_ORYX_AUDIO_CODEC_AAC
  bool "Audio Codec Plugin AAC"
  depends on BUILD_AMBARELLA_ORYX_AUDIO_CODEC
  select BUILD_AMBARELLA_ORYX_AUDIO_CODEC_BASE
  default y
  help
    Build Oryx Audio Codec Plugin for AAC

choice
  bool "AAC Codec Type"
  depends on BUILD_AMBARELLA_ORYX_AUDIO_CODEC_AAC
  default BUILD_AMBARELLA_ORYX_AUDIO_CODEC_AAC_OLD

config BUILD_AMBARELLA_ORYX_AUDIO_CODEC_AAC_OLD
  bool "AAC codec using library version 201412"
  depends on !CONFIG_ARCH_S5
  depends on !CONFIG_ARCH_S5L
  help
    AAC codec using library version 201412

config BUILD_AMBARELLA_ORYX_AUDIO_CODEC_AAC_NEW
  bool "AAC codec using library version 20170413"
  help
    AAC codec using library version 20170413
endchoice

config BUILD_AMBARELLA_ORYX_AUDIO_CODEC_G711
  bool "Audio Codec Plugin G.711"
  depends on BUILD_AMBARELLA_ORYX_AUDIO_CODEC
  select BUILD_AMBARELLA_ORYX_AUDIO_CODEC_BASE
  default y
  help
    Build Oryx Audio Codec Plugin for G.711

config BUILD_AMBARELLA_ORYX_AUDIO_CODEC_G726
  bool "Audio Codec Plugin G.726"
  depends on BUILD_AMBARELLA_ORYX_AUDIO_CODEC
  select BUILD_AMBARELLA_ORYX_AUDIO_CODEC_BASE
  default y
  help
    Build Oryx Audio Codec Plugin for G.726

config BUILD_AMBARELLA_ORYX_AUDIO_CODEC_MP3
  bool "Audio Codec Plugin MP3"
  depends on BUILD_AMBARELLA_ORYX_AUDIO_CODEC
  select BUILD_AMBARELLA_ORYX_AUDIO_CODEC_BASE
  select CONFIG_AMBARELLA_MPG123_SUPPORT
  default y
  help
    Build Oryx Audio Codec Plugin for MP3

config BUILD_AMBARELLA_ORYX_AUDIO_CODEC_OPUS
  bool "Audio Codec Plugin OPUS"
  depends on BUILD_AMBARELLA_ORYX_AUDIO_CODEC
  select BUILD_AMBARELLA_ORYX_AUDIO_CODEC_BASE
  default y
  help
    Build Oryx Audio Codec Plugin for OPUS

config BUILD_AMBARELLA_ORYX_AUDIO_CODEC_SPEEX
  bool "Audio Codec Plugin SPEEX"
  depends on BUILD_AMBARELLA_ORYX_AUDIO_CODEC
  select BUILD_AMBARELLA_ORYX_AUDIO_CODEC_BASE
  default y
  help
    Build Oryx Audio Codec Plugin for SPEEX

config BUILD_AMBARELLA_ORYX_AUDIO_CODEC_BASE
  bool "Audio Codec Plugin base library"
  depends on BUILD_AMBARELLA_ORYX_AUDIO_CODEC
  depends on BUILD_AMBARELLA_ORYX_AUDIO_CODEC_AAC_OLD || BUILD_AMBARELLA_ORYX_AUDIO_CODEC_AAC_NEW || BUILD_AMBARELLA_ORYX_AUDIO_CODEC_OPUS || BUILD_AMBARELLA_ORYX_AUDIO_CODEC_G711 || BUILD_AMBARELLA_ORYX_AUDIO_CODEC_G726 || BUILD_AMBARELLA_ORYX_AUDIO_CODEC_SPEEX
  default n
  help
    Build Oryx Audio Codec Plugin base library

